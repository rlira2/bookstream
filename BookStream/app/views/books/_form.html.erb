<style>
form {
  font-size: medium;
}
</style>

<%= form_for(@book, :html => {:multipart => true}) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
         <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
         <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, "Title*" %><br>
    <%= f.text_field :name %>
  </div>
  <br>
  <div class="field">
    <%= f.label :author, "Author*" %><br>
    <%= f.text_field :author %>
  </div>
  <br>
  <div class="field">
    <%= f.label :document, "Document*" %>
    <%= f.file_field :document %>
  </div>
  <br>
  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>
  <br>
  <div class="text_area">
    <%= f.label :description %><br>
    <%= f.text_area :description, size: "40x2" %>
  </div>
  <br>
  <div class="field">
    <%= f.label :access, "Access*" %><br>
    <%= f.radio_button(:access, "Private") %>
    <%= f.label(:access_private, "Private") %><br>
    <%= f.radio_button(:access, "Public") %>
    <%= f.label(:access_public, "Public") %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit class: "btn btn-lg btn-success" %>
  </div>
<% end %>